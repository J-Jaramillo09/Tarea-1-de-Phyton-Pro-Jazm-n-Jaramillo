}

print("Bienvenido al diccionario de manerismos juveniles.")
print("Escribe una palabra para consultar su significado.")
print("Escribe 'SALIR' para terminar el programa.\n")



contador = 0
seguir = True  

while seguir:
    word = input("Ingrese la palabra que desea consultar: ")
    word = word.strip().upper()
    if word == "SALIR":
        print("Â¡Gracias por usar el diccionario! Hasta luego.")
        break
    elif word in manerismos:
        print(word + ": " + manerismos[word] + "\n")
        contador += 1
        while True:
            continuar = input("Â¿Deseas continuar en el programa? (si/no): ")
            continuar = continuar.strip().lower()
            if continuar == "si":
                print("")
                break
            elif continuar == "no":
                print("Â¡Gracias por usar el diccionario! Hasta luego.")
                seguir = False  # ðŸ”š Detiene el bucle principal
                break
            elif continuar!="si"or continuar != "no":
                print("Respuesta no vÃ¡lida. Por favor escribe 'si' o 'no'.\n")
    else:
        print("Lo siento, esa palabra no estÃ¡ en el diccionario.\n")
